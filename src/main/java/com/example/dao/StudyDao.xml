<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.dao.StudyDao">
	<select id="getList" parameterType="map" resultType="Article">
		SELECT *
		FROM board
	</select>
	
	<select id="getOne" parameterType="long" resultType="Article">
		SELECT *
		FROM board
		WHERE id = #{id}
	</select>
	
	<select id="getTotalCount" resultType="int">
		SELECT COUNT(*)
		FROM board
	</select>
	

	<insert id="add" parameterType="map" useGeneratedKeys="true"
		keyProperty="id">
		INSERT INTO study
		value regDate = NOW(),
		title = #{title},
		body = #{body},
		hit = 0
		
		insert into study 
		values(1, 'boydsa', '3', '4', '5', '6', sysdate, sysdate, sysdate, '10');
	</insert>
	
	<update id="modify" parameterType="map">
		UPDATE article
		SET title = #{title},
		body = #{body}
		WHERE id = #{id}
	</update>
	
	<update id="hitUp" parameterType="long">
		UPDATE article
		SET hit = hit + 1
		WHERE id = #{id}
	</update>
	
	<delete id="delete" parameterType="long" >
		DELETE FROM article
		WHERE id = #{id}
	</delete>
</mapper>
